<!DOCTYPE html>
<html>
  <head>
    <title>{{ title }}</title>
    {{> headScripts }}
  </head>
  <body>
    <main>
      {{> header title=title}}

      <section id="gallery" data-colcade="columns: .grid-col, items: .painting">
        <div class="grid-col grid-col--1"></div>
        <div class="grid-col grid-col--2"></div>
        <div class="grid-col grid-col--3"></div>
        <div class="grid-col grid-col--4"></div>
        {{#each imageData.images as | image |}}
          {{> painting image=image index=@index }}
        {{/each}}
      </section>

      {{> footer }}
    </main>
    {{> lightbox }}
  </body>
</html>
